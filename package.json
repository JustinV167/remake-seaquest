{
  "name": "Seaquest",
  "version": "1.0.0",
  "description": "Remake del clásico juego de la Atari 2600 SeaQuest, implementado con Phaser y Electron",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx http-server",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Rafael Vasquez <vasquezsrafael05@gmail.com>, Justin Vegas",
  "license": "ISC",
  "dependencies": {
    "http-server": "^14.1.1",
    "path": "^0.12.7",
    "phaser": "^3.88.2"
  },
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "seaquest",
    "productName": "Seaquest",
    "directories": {
    "output": "dist"
    }
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icons/icon.png",
    "category": "Game",
    "desktop": {
      "entry": {
        "Name": "Seaquest",
        "Comment": "Remake del clásico de la Atari 2600",
        "StartupWMClass": "seaquest",
        "Icon": "icon",
        "Categories": "Game;",
        "Type": "Application"
      }
    }
  },
  "win": {
    "target": "nsis",
    "icon": "build/icons/256x256.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.games"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico"
  }
}
